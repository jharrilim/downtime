{
    "version": 2,
    "name": "downtime",
    "builds": [
        { "src": "client/package.json", "use": "@now/static-build", "config": { "distDir": "build" } },
        { "src": "server/src/*.ts", "use": "@now/node" }
    ],
    "routes": [
        { "src": "/api", "dest": "/server/src/index.ts" },
        { "src": "/(.*)", "dest": "/client/$1" }
    ]
}