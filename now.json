{
    "version": 2,
    "name": "downtime",
    "env": {
        "PORT": "443"
    },
    "builds": [
        { "src": "client/package.json", "use": "@now/static-build", "config": { "distDir": "build" } }
    ],
    "routes": [
        { "src": "/favicon.ico", "dest": "client/public/favicon.ico" },
        { "src": "/manifest.json", "dest": "/client/public/manifest.json" },
        { "src": "/service-worker.js", "headers": { "cache-control": "s-maxage=0" }, "dest": "client/src/service-worker.js" },
        { "src": "/", "headers": {"cache-control": "s-maxage=0"}, "dest": "client/public/index.html" }
    ]
}